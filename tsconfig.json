{

    "compilerOptions": {
        "target": "ES2024",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "./src/**/*.test.ts" ]
}
